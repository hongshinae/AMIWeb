{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			],
		},
		"sourceMap": true
	},
	"pluginOptions": {
		"i18n": {
			"locale": "ko_KR",
			"fallbackLocale": "ko",
			"localeDir": "locales",
			"enableInSFC": false
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}